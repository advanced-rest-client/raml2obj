#%RAML 1.0 DataType

type: object
displayName: Indirizzo
properties:
  type:
    type: string
    description: Tipo della risorsa
    required: true
  id:
    type: string
    description: Identificativo univoco della risorsa
    required: false
  attributes:
    type: object
    properties:
      societa:
        type: string
        required: true
        maxLength: 2
        description: Codice della societa
      indirizzo:
        type: string
        required: true
      cap:
        type: string
        required: true
        description: Codice postale dell'indirizzo di destinazione
      localita:
        type: string
        required: true
        description: Localita dell'indirizzo di destinazione
      provincia:
        type: string?
        required: true
        description: Sigla della provincia dell'indirizzo di destinazione
      nazione:
        type: string?
        required: true
        description: Codice ISO della nazione dell'indirizzo di destinazione
        
    required: false